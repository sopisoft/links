{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },
  "files": {
    "include": ["app/**/*.ts", "app/**/*.tsx"],
    "ignore": ["dist/*", "node_modules/*"],
    "ignoreUnknown": true
  },
  "formatter": {
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5"
    }
  }
}
